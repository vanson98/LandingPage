@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - EximaniAdmin</title>
    <!-- Layout admin -->
    <link rel="stylesheet" href="~/css/layout-admin.css" />
    <!-- Toastr -->
    <link rel="stylesheet" href="~/plugins/toastr/toastr.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Jquery UI-->
    <link href="~/plugins/jquery-ui/jquery-ui.css" rel="stylesheet" />
    <!--Sweet alert 2-->
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    @*Page Style*@
    <link href="~/css/admin.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Login" asp-controller="Admin" class="nav-link">Đăng xuất</a>
                </li>
            </ul>

        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item ">
                            <a asp-action="Index" asp-controller="AdminBlog" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Quản lý Blog
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a asp-action="Index" asp-controller="AdminProduct" class="nav-link">
                                <i class="nav-icon fas fa-boxes"></i>
                                <p>
                                    Quản lý sản phẩm
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ContactList" asp-controller="AdminContact" class="nav-link">
                                <i class="fa fa-list-alt nav-icon" aria-hidden="true"></i>
                                <p>Quản lý contact</p>
                            </a>
                        </li>
                        @*<li class="nav-item has-treeview">
                            <a asp-action="ListUser" asp-controller="Admin" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Quản lý tài khoản
                                </p>
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="AdminProductCategory" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Quản lý loại sản phẩm</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        @RenderBody()

        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <script src="~/js/layout-admin.js"></script>
    <script src="~/plugins/notify/notify.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <!-- Tiny MCE -->
    <script src="/plugins/tinymce/tinymce.min.js"></script>
    <script src="/plugins/tinymce/jquery.tinymce.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

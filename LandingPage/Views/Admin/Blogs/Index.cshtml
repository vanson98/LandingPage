@model List<BlogViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}
<div class="content-wrapper">
    <div class="card" style="min-height: 381px; margin: 25px; padding: 15px;">
        <div style="display: flex; margin: 20px 10px; align-items: center">
            <h4 style="flex-grow: 1">Danh sách blog</h4>
            <button class="btn btn-primary">
                <a href="/AdminBlog/CreateItem" style="color: #FFF; text-decoration: none">Tạo mới</a>
            </button>
        </div>
        <div class="table-container">
            <table id="blog-table" class="table table-striped">
                <thead>
                    <tr>
                        <th>Blog Title</th>  
                        <th>Author</th>
                        <th>Created Date</th>
                        <th>Category</th>
                        <th style="text-align:center">Published</th>
                        <th style="text-align:center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BlogTitle</td>
                            <td>@item.Author</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.Category</td>
                            <td style="text-align:center">
                                <input class="form-check-input" type="checkbox" @(item.Published?"checked='checked'":"")>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <button class="dropdown-item" type="button">Edit</button>
                                        <button class="dropdown-item" type="button">Delete</button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
   
</div>
@section Scripts
{
    <script type="text/javascript" src="~/js/admin/blog/index.js"></script>
}
@model List<BlogViewModel>
@{
    Layout = "_AdminLayout";
}
@section Styles
{
    <link href="~/css/blog.css" type="text/css" rel="stylesheet" />
}
<div class="content-wrapper">
    <div class="card" style="min-height: 381px; margin: 25px; padding: 15px;">
        <div style="display: flex; margin: 20px 10px; align-items: center">
            <h4 style="flex-grow: 1">Danh sách blog</h4>
            <button class="btn btn-primary">
                <a href="/AdminBlog/CreateOrUpdateItem?blogId=#" style="color: #FFF; text-decoration: none">Tạo mới</a>
            </button>
        </div>
        <div class="table-container">
            <table id="blog-table" class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 40%">Blog Title</th>
                        <th>Author</th>
                        <th>Created Date</th>
                        <th style="text-align: center;width: 100px">Published</th>
                        <th style="text-align:center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="record-@item.Id">
                            <td>@item.BlogTitle</td>
                            <td>@item.Author</td>
                            <td>@item.CreatedDate</td>
                            <td style="text-align:center">
                                @if (item.Published)
                                {
                                    <i class="fas fa-check"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times"></i>
                                }
                            </td>
                            <td style="text-align: center">

                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <button class="dropdown-item" type="button">
                                            <a class="link-btn" href="/AdminBlog/CreateOrUpdateItem?blogId=@item.Id">Edit</a>
                                        </button>
                                        <button class="dropdown-item delete-btn" type="button" id="@item.Id">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
@section Scripts
{
    <script>
        $(".nav-sidebar li").children().removeClass("active");
        $(".nav-sidebar li:nth-child(1)>a").addClass("active");
    </script>
    <script type="text/javascript" src="~/js/admin/blog/index.js"></script>
}